<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Sly\RelationBundle\Entity\Relation" table="relation">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="object1Entity" column="object1_entity" type="string" length="255" nullable="true" />
        <field name="object1Id" column="object1_id" type="integer" length="11" nullable="true" />
        <field name="object2Entity" column="object2_entity" type="string" length="255" nullable="true" />
        <field name="object2Id" column="object2_id" type="integer" length="11" nullable="true" />

        <field name="createdAt" column="created_at" type="datetime" />
    </entity>
</doctrine-mapping>

